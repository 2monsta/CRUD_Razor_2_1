@page
@model CRUD_Razor_2_1.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}



@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button"   class="close" data-dismiss="alert" arial-label ="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<a asp-page="Create" class="btn btn-primary">Create Book</a>

@if (Model.Books.Count() > 0)
{
    <div>Books are available!</div>
    <br />

    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().NameOfBook)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
            </th>
        </tr>
        
         @foreach (var item in Model.Books)
         {
        <tr>
            <td>
                @Html.DisplayFor(m => item.NameOfBook)
            </td>
            <td>
                @Html.DisplayFor(m => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(m => item.Author)
            </td>
        </tr>
         }
    </table>
}
else
{
    <div>No Books are Available</div>
}

